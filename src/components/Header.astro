---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import { Image } from "astro:assets";
import Portrait from "../assets/portrait_matthias_karl.png";
---

<header>
	<div class="header-section gap-4">
		<div class="header-frame">
			<h1>{SITE_TITLE}</h1>
			<h2>{SITE_DESCRIPTION}</h2>
		</div>
    <div>
      <Image src={Portrait} alt="" class="rounded-full w-48 h-48" />
    </div>
	</div>
</header>
<nav>
	<HeaderLink href="/">home</HeaderLink>
	<HeaderLink href="https://github.com/matthiaskarl91">Github</HeaderLink>
	<HeaderLink href="https://www.linkedin.com/in/mkarlme/">LinkedIn</HeaderLink>
</nav>
<style>
	h2 {
		margin: 0.5em 0;
	}
</style>
